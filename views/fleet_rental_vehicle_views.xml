<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_fleet_rental_vehicle_list" model="ir.ui.view">
        <field name="name">fleet.rental.vehicle.list</field>
        <field name="model">fleet.rental.vehicle</field>
        <field name="arch" type="xml">
            <list string="Vehicles" decoration-info="state == 'available'" decoration-warning="state == 'on_rent'" decoration-danger="state == 'maintenance'">
                <field name="name"/>
                <field name="brand_model"/>
                <field name="registration_number"/>
                <field name="daily_rent" sum="Total Daily Rent"/>
                <field name="state" widget="badge" decoration-info="state == 'available'" decoration-warning="state == 'on_rent'" decoration-danger="state == 'maintenance'"/>
            </list>
        </field>
    </record>

    <record id="view_fleet_rental_vehicle_form" model="ir.ui.view">
        <field name="name">fleet.rental.vehicle.form</field>
        <field name="model">fleet.rental.vehicle</field>
        <field name="arch" type="xml">
            <form string="Vehicle">
                <header>

                    <button name="action_set_maintenance" string="Set to Maintenance" type="object" invisible="state == 'maintenance' or state == 'on_rent'"/>
                    <button name="action_set_available" string="Set to Available" type="object" invisible="state != 'maintenance'"/>

                     <field name="state" widget="statusbar"/>

                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="brand_model"/>
                            <field name="registration_number"/>
                        </group>
                        <group>
                            <label for="daily_rent"/>
                                <div name="daily_rent_div" class="o_row">
                                    <field name="daily_rent"/>
                                    <field name="currency_id"
                                           options="{'no_create': True, 'no_open': True}"
                                           required="1"
                                           groups="base.group_multi_currency"/>
                                </div>

                                <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                        </group>
                    </group>

                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_fleet_rental_vehicle_search" model="ir.ui.view">
        <field name="name">fleet.rental.vehicle.search</field>
        <field name="model">fleet.rental.vehicle</field>
        <field name="arch" type="xml">
            <search string="Vehicles">
                <field name="name"/>
                <field name="brand_model"/>
                <field name="registration_number"/>
                <filter string="Available" name="available" domain="[('state', '=', 'available')]"/>
                <filter string="On Rent" name="on_rent" domain="[('state', '=', 'on_rent')]"/>
                <filter string="Maintenance" name="maintenance" domain="[('state', '=', 'maintenance')]"/>
                <group expand="0" string="Group By">
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Brand/Model" name="group_brand_model" context="{'group_by': 'brand_model'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_fleet_rental_vehicle" model="ir.actions.act_window">
        <field name="name">Vehicles</field>
        <field name="res_model">fleet.rental.vehicle</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>

    </record>
</odoo>
