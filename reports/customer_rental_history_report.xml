<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Customer Rental History Report Action -->
    <record id="action_customer_rental_history_report" model="ir.actions.report">
        <field name="name">Customer Rental History</field>
        <field name="model">res.partner</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">fleet_rental.customer_rental_history_report</field>
        <field name="report_file">fleet_rental.customer_rental_history_report</field>
        <field name="binding_model_id" ref="base.model_res_partner"/>
        <field name="binding_type">report</field>
    </record>

    <!-- Customer Rental History Report Template -->
    <template id="customer_rental_history_report">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <div class="row">
                        <div class="col-12">
                            <h2>Customer Rental History</h2>
                            <p>Report Date: <span t-esc="date"/></p>
                        </div>
                    </div>
                    <table class="table table-condensed table-bordered">
                        <thead>
                            <tr style="background-color: #f0f0f0;">
                                <th>Customer Name</th>
                                <th>First Rental Date</th>
                                <th>Last Rental Date</th>
                                <th>Avg Contract Value</th>
                                <th>Current Balance</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="report_data" t-as="customer">
                                <tr>
                                    <td><span t-esc="customer['customer_name']"/></td>
                                    <td><span t-esc="customer['first_rental_date']"/></td>
                                    <td><span t-esc="customer['last_rental_date']"/></td>
                                    <td>
                                        <span t-esc="'{:.2f}'.format(customer['avg_contract_value'])"/>
                                    </td>
                                    <td>
                                        <span t-esc="'{:.2f}'.format(customer['current_balance'])"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
