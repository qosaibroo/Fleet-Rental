<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_fleet_availability_report_list" model="ir.ui.view">
        <field name="name">fleet.availability.report.list</field>
        <field name="model">fleet.availability.report</field>
        <field name="arch" type="xml">
            <list create="false" edit="false">
                <field name="vehicle_name"/>
                <field name="brand_model"/>
                <field name="registration_number"/>
                <field name="state"/>
                <field name="expected_return_date"/>
            </list>
        </field>
    </record>

    <record id="action_fleet_availability_sql_report" model="ir.actions.act_window">
        <field name="name">Fleet Availability Analysis</field>
        <field name="res_model">fleet.availability.report</field>
        <field name="view_mode">list</field>
        <field name="view_id" ref="view_fleet_availability_report_list"/>
        <field name="help" type="html">
            <p>Analysis of vehicle availability based on the latest confirmed or invoiced contract.</p>
        </field>
    </record>

    </odoo>
