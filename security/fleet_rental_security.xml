<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="module_category_fleet_rental" model="ir.module.category">
            <field name="name">Fleet Rental</field>
            <field name="description">Fleet Rental Management</field>
            <field name="sequence">50</field>
        </record>

        <record id="group_fleet_rental_user" model="res.groups">
            <field name="name">Rental / User</field>
            <field name="category_id" ref="module_category_fleet_rental"/>
        </record>

        <record id="group_fleet_rental_manager" model="res.groups">
            <field name="name">Rental / Manager</field>
            <field name="category_id" ref="module_category_fleet_rental"/>
            <field name="implied_ids" eval="[(4, ref('group_fleet_rental_user'))]"/>
        </record>

        <record id="fleet_rental_contract_company_rule" model="ir.rule">
            <field name="name">Fleet Rental Contract: multi-company</field>
            <field name="model_id" ref="model_fleet_rental_contract"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record id="fleet_rental_vehicle_company_rule" model="ir.rule">
            <field name="name">Fleet Rental Vehicle: multi-company</field>
            <field name="model_id" ref="model_fleet_rental_vehicle"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>
    </data>
</odoo>
